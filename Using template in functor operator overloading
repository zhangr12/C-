#include <iostream>
#include <vector>
#include <functional>
#include <algorithm>
using namespace std;

template<class T>
class Match{
public:
    Match() = default;
    // we can initialize the t in constructor
    Match(T tt){
        t = tt;
    }
    // we can also change the value of t using the function marker
    void marker(T tt){
        t = tt;
    }
    
    bool operator()(T test){
        return test== t;
    }
private:
    T t;
};

int main()
{
    vector<string> v{"one", "two", "three"};
    // need to specify the type of Match when we construct the object
    Match<string> m("one");
    
    m.marker("five");
    
    int count3 = count_if(v.begin(), v.end(), m);
    
    cout << "count3: " << count3 << endl;
    
    return 0;
}
